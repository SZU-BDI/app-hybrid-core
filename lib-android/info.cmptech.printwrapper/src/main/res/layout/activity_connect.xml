<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SelectPrinterActivity">

    <Button
        android:id="@+id/search_btprinter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:text="@string/search_and_connect_printer" />

    <Button
        android:id="@+id/connect_coupled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/search_btprinter"
        android:layout_alignStart="@+id/search_btprinter"
        android:layout_below="@+id/search_btprinter"
        android:layout_marginTop="40dp"
        android:text="@string/connect_matched_printer" />

    <Button
        android:id="@+id/disconnect_btprinter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/connect_coupled"
        android:layout_alignStart="@+id/connect_coupled"
        android:layout_below="@+id/connect_coupled"
        android:layout_marginTop="50dp"
        android:text="@string/disconnect_printer" />
</RelativeLayout>
